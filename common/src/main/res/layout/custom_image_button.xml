<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="56dp"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_custom_button"
        app:rippleColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cornerRadius="8dp"
        android:elevation="4dp"
        android:outlineProvider="bounds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/orange_quaternary"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:elevation="8dp"
        android:gravity="center"
        android:weightSum="10"
        app:layout_constraintTop_toTopOf="@id/bt_custom_button"
        app:layout_constraintStart_toStartOf="@id/bt_custom_button"
        app:layout_constraintEnd_toEndOf="@id/bt_custom_button"
        app:layout_constraintBottom_toBottomOf="@id/bt_custom_button">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_custom_button_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_weight="3"
            android:src="@drawable/icon_done"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_custom_button_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="7"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="PRUEBA"/>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>