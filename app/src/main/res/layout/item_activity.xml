<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="50dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="93dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="@dimen/elevation_card_title"
            android:background="@color/blue_primary"
            app:layout_constraintBottom_toTopOf="@id/gl_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintBottom_toTopOf="@id/gl_resume"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gl_header" />

        <!-- Header -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/horizontal_margin_small"
            android:elevation="@dimen/elevation_card_title_content"
            app:layout_constraintBottom_toTopOf="@+id/gl_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
            tools:src="@drawable/face_default" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="3dp"
            android:orientation="vertical"
            android:elevation="@dimen/elevation_card_title_content"
            app:layout_constraintBottom_toTopOf="@id/gl_header"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@id/iv_profile_pic"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large_16"
                tools:text="Guillermo Díaz Ibañez" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small_12"
                tools:text="18/08/2023" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/icon_run"
            android:layout_marginEnd="5dp"
            android:elevation="@dimen/elevation_card_title_content"
            app:layout_constraintBottom_toTopOf="@id/gl_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Stats -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="5dp"
            android:weightSum="3"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@id/gl_header"
            app:layout_constraintBottom_toTopOf="@id/gl_resume"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_stat_distance"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="@string/stat_distance_activity"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_stat_rythm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="@string/stat_rythm_activity"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_stat_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="@string/stat_time_activity"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Likes -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:weightSum="3"
            app:layout_constraintTop_toTopOf="@id/gl_header"
            app:layout_constraintBottom_toTopOf="@id/gl_resume"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:gravity="end|center"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="55"/>

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/bt_fav_item_colegio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:background="@drawable/fav_selector"
                android:textOn="@null"
                android:textOff="@null"
                android:checked="false"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_expanded="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bt_deploy"
            app:layout_constraintTop_toBottomOf="@id/gl_resume" >
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </net.cachapa.expandablelayout.ExpandableLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/bt_deploy"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/purple_secondary"
            android:src="@drawable/small_arrow_down"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/expandable" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>



