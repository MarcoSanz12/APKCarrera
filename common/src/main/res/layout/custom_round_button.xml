<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="90dp"
    android:layout_height="97dp"
    android:background="@color/transparent">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_round_button"
        android:layout_width="90dp"
        android:layout_height="97dp"
        android:backgroundTint="@color/white"
        app:cornerRadius="360dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/purple_secondary"
        android:elevation="10dp"
        app:strokeColor="@color/purple_secondary"
        app:strokeWidth="1dp"
        app:rippleColor="@color/purple_secondary"/>
    <TextView
        android:id="@+id/tv_round_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Reanudar"
        android:textStyle="bold"
        android:elevation="10dp"
        android:textSize="18sp"
        android:textColor="@color/purple_secondary"/>

</FrameLayout>