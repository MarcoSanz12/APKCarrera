<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/friends_card_size"
    android:stateListAnimator="@animator/animator_button">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layerdrawer_item_friend_background"
        android:paddingHorizontal="@dimen/horizontal_margin_card">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="@dimen/friends_card_size"
            android:layout_height="@dimen/friends_card_size"
            android:padding="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
            tools:src="@drawable/face_default" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="@dimen/text_size_large_16"
            tools:text="Guillermo Díaz Ibañez"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/bt_remove_friend"
            app:layout_constraintStart_toEndOf="@+id/iv_profile_pic"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_last_activity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="@dimen/text_size_small_12"
            android:textColor="@color/black"
            android:text="@string/last_activity"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/bt_remove_friend"
            app:layout_constraintStart_toEndOf="@+id/iv_profile_pic"
            app:layout_constraintBottom_toBottomOf="parent" />
        <ImageView
            android:id="@+id/bt_remove_friend"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/icon_remove_friend"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideline"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>