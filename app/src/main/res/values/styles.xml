<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="register_editext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomCardCorners" parent="@style/Widget.Material3.CardView.Filled">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="iconTint">@color/orange_quaternary</item>
        <item name="backgroundTint">@color/purple_secondary</item>
        <item name="iconSize">24dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:checkable">true</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Button.Rounded</item>
    </style>

    <style name="ActionbarButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:visibility">visible</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">0dp</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="iconTint">@color/selector_actionbarbutton</item>
        <item name="iconSize">40dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="ActionbarButtonCheckable" parent="ActionbarButton">
        <item name="android:checkable">true</item>
        <item name="android:checked">false</item>
    </style>

    <style name="SearchLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/blue_primary</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="placeholderTextAppearance">@style/SearchText</item>
        <item name="hintTextAppearance">@style/SearchText</item>
        <item name="expandedHintEnabled">false</item>
        <item name="placeholderTextColor">@color/white</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/white</item>
    </style>

    <style name="SearchEditext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large_16</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="SearchText">
        <item name="android:textSize">@dimen/text_size_large_16</item>
        <item name="android:textStyle">italic</item>
        <item name="textColor">@color/background</item>
    </style>

    <style name="StandardButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/basic_ripple</item>
        <item name="iconPadding">0dp</item>
        <item name="icon">@drawable/icon_delete</item>
        <item name="iconTint">@color/white</item>
        <item name="iconSize">40dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:stateListAnimator">@animator/animator_button</item>
    </style>

    <style name="TabTextApparence" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>