<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="20dp"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">

        <!-- Ayuda -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ly_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_text_help"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:paddingVertical="8dp"
                android:maxLines="1"
                android:text="@string/settings_help"
                app:drawableStartCompat="@drawable/settings_help"
                android:drawablePadding="20dp"
                app:drawableTint="@color/blue_primary"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_ultralarge_20"
                app:layout_constraintBottom_toTopOf="@id/line_help"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_arrow_help"
                android:drawableTint="@color/black"
                />
            <View
                android:id="@+id/line_help"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/blue_primary"
                app:layout_constraintTop_toBottomOf="@id/tv_text_help"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_arrow_help"
                android:layout_width="20dp"
                android:layout_height="39dp"
                android:paddingVertical="10dp"
                android:scaleY="1.65"
                android:scaleX="1.65"
                app:tint="@color/blue_primary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/line_help"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/settings_arrow"
                android:scaleType="centerInside"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Idioma -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ly_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_language"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:paddingVertical="8dp"
                android:maxLines="1"
                android:text="@string/settings_language"
                app:drawableStartCompat="@drawable/settings_language"
                android:drawablePadding="20dp"
                app:drawableTint="@color/blue_primary"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_ultralarge_20"
                app:layout_constraintBottom_toTopOf="@id/line_language"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_arrow_language"
                android:drawableTint="@color/black"
                />
            <View
                android:id="@+id/line_language"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/blue_primary"
                app:layout_constraintTop_toBottomOf="@id/tv_language"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_arrow_language"
                android:layout_width="20dp"
                android:layout_height="39dp"
                android:paddingVertical="10dp"
                android:scaleY="1.65"
                android:scaleX="1.65"
                app:tint="@color/blue_primary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/line_language"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/settings_arrow"
                android:scaleType="centerInside"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Cerrar sesiÃ³n -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ly_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_text_logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:paddingVertical="8dp"
                android:maxLines="1"
                android:text="@string/settings_logout"
                app:drawableStartCompat="@drawable/settings_logout"
                android:drawablePadding="20dp"
                app:drawableTint="@color/red"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_ultralarge_20"
                app:layout_constraintBottom_toTopOf="@id/line_logout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_arrow_logout"
                />
            <View
                android:id="@+id/line_logout"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/red"
                app:layout_constraintTop_toBottomOf="@id/tv_text_logout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_arrow_logout"
                android:layout_width="20dp"
                android:layout_height="39dp"
                android:paddingVertical="10dp"
                android:scaleY="1.65"
                android:scaleX="1.65"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/line_logout"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/red"
                android:src="@drawable/settings_arrow"
                android:scaleType="centerInside"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>