<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa para el cuadrado blanco -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_primary"/> <!-- Color blanco en formato hexadecimal -->
            <corners android:radius="15dp"/> <!-- Radio de esquinas redondeadas en dp -->
        </shape>
    </item>

    <!-- Capa para los bordes redondeados azules -->
    <item android:right="4dp" android:left="4dp" android:top="40dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Color azul en formato hexadecimal -->
            <corners android:radius="15dp"/> <!-- Radio de esquinas redondeadas en dp -->
        </shape>
    </item>
</layer-list>