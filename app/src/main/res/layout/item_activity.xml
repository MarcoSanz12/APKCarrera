<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_marginBottom="20dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="50dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="100dp" />

        <View
            android:id="@+id/blue_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="@dimen/elevation_card_title"
            android:background="@color/blue_primary"
            app:layout_constraintBottom_toTopOf="@id/gl_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/white_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/bt_deploy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gl_header" />

        <!-- Header -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/horizontal_margin_small"
            android:clickable="false"
            android:focusable="false"
            android:elevation="@dimen/elevation_card_title_content"
            app:layout_constraintBottom_toTopOf="@+id/gl_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
            tools:src="@drawable/face_default" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="3dp"
            android:clickable="false"
            android:focusable="false"
            android:orientation="vertical"
            android:elevation="@dimen/elevation_card_title_content"
            app:layout_constraintBottom_toTopOf="@id/gl_header"
            app:layout_constraintEnd_toStartOf="@+id/iv_type"
            app:layout_constraintStart_toEndOf="@id/iv_profile_pic"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large_16"
                tools:text="Guillermo Díaz Ibañez" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small_12"
                tools:text="18/08/2023" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/icon_run"
            android:layout_marginEnd="5dp"
            android:elevation="@dimen/elevation_card_title_content"
            app:layout_constraintBottom_toTopOf="@id/gl_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Stats -->
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/ly_stats"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingBottom="15dp"
            android:clickable="false"
            android:focusable="false"
            android:layout_marginHorizontal="30dp"
            app:justifyContent="space_around"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@id/gl_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Distancia -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_flexGrow="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:gravity="center|bottom"
                    android:text="@string/stat_distance_activity"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_stat_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    tools:text="28 km"/>

            </LinearLayout>

            <!-- Ritmo -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_flexGrow="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:gravity="center|bottom"
                    android:text="@string/stat_rythm_activity"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_stat_rythm"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    tools:text="5:06 min/km"/>

            </LinearLayout>

            <!-- Tiempo -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_flexGrow="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:gravity="center|bottom"
                    android:text="@string/stat_time_activity"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_stat_time"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    tools:text="0h 45min"/>

            </LinearLayout>



        </com.google.android.flexbox.FlexboxLayout>
        <!-- Likes -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:weightSum="3"
            app:layout_constraintTop_toTopOf="@id/gl_header"
            app:layout_constraintBottom_toTopOf="@id/gl_resume"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_fav1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:gravity="end|center"
                android:maxLines="1"
                android:ellipsize="end"
                android:visibility="gone"
                tools:text="55"/>

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/bt_fav1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleX="0.75"
                android:visibility="gone"
                android:scaleY="0.75"
                android:background="@drawable/fav_selector"
                android:textOn="@null"
                android:textOff="@null"
                android:checked="false"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            app:el_expanded="false"
            tools:el_expanded="true"
            tools:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ly_stats" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:id="@+id/sv_imagenes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingHorizontal="20dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    app:layout_constraintStart_toStartOf="parent"
                    android:scrollbars="none"
                    android:fillViewport="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="192dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:overScrollMode="never"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:showDividers="middle"
                        android:orientation="horizontal">
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cv_map"
                            android:layout_width="192dp"
                            android:layout_height="match_parent"
                            app:strokeWidth="0dp"
                            android:layout_alignParentStart="true">

                            <com.google.android.gms.maps.MapView
                                android:id="@+id/map"
                                android:layout_width="192dp"
                                android:layout_height="match_parent"
                                app:liteMode="true"
                                app:mapType="satellite"
                                android:name="com.google.android.gms.maps.MapFragment"/>

                        </com.google.android.material.card.MaterialCardView>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"
                            android:orientation="horizontal"
                            android:layout_toEndOf="@id/cv_map"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/item_image"
                            />
                    </RelativeLayout>
                </HorizontalScrollView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="8dp"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="Me duelen las piernas pero aun asi debo continuar escribiendo hasta poder llegar a la tercera linea ay ay ay se acaba ya el espacio de texto esto no tiene futuro"/>

                    <!-- Likes 2 -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ly_fav2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_fav2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:layout_weight="2"
                            android:textColor="@color/black"
                            android:gravity="end|center"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:visibility="gone"
                            tools:text="55"/>

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/bt_fav2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scaleX="0.75"
                            android:scaleY="0.75"
                            android:background="@drawable/fav_selector"
                            android:textOn="@null"
                            android:textOff="@null"
                            android:visibility="gone"
                            android:checked="false"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </net.cachapa.expandablelayout.ExpandableLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/bt_deploy"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/purple_secondary"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/small_arrow_down"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>



