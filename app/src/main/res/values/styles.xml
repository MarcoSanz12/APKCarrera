<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="register_editext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomCardCorners" parent="@style/Widget.Material3.CardView.Filled">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="iconTint">@color/orange_quaternary</item>
        <item name="backgroundTint">@color/purple_secondary</item>
        <item name="iconSize">24dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:checkable">true</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Button.Rounded</item>
    </style>

    <style name="ActionbarButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:visibility">visible</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">0dp</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="iconTint">@color/white</item>
        <item name="iconSize">40dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

</resources>