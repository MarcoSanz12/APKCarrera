<?xml version="1.0" encoding="utf-8"?>
<net.cachapa.expandablelayout.ExpandableLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:tag="@string/expandable_tag_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:translationY="-70dp"
    app:layout_constraintTop_toTopOf="parent"
    app:el_expanded="false"
    tools:el_expanded="true">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="40dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/black"
        app:cardElevation="6dp"
        app:cardCornerRadius="35dp"
        app:cardBackgroundColor="@color/blue_tertiary">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/gl_searchbar"
                app:layout_constraintGuide_percent="0.5"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/SearchLayout"
                android:paddingStart="32dp"
                android:paddingEnd="5dp"
                android:id="@+id/ly_actionbar_search"
                app:endIconMode="clear_text"
                app:endIconTint="@color/white"
                app:placeholderText="@string/search_placeholder"
                app:layout_constraintTop_toTopOf="@id/gl_searchbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/SearchEditext"
                    android:tag="@string/expandable_tag_search"
                    android:backgroundTint="@color/blue_tertiary"
                    android:id="@+id/et_actionbar_search"
                    android:drawableEnd="@drawable/baseline_search_24"
                    />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</net.cachapa.expandablelayout.ExpandableLayout>