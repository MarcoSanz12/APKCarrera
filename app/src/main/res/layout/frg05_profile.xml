<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingVertical="30dp">

        <!-- Imágen -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            tools:src="@drawable/face_default"/>

        <!-- Nombre -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="32sp"
            android:layout_marginTop="10dp"
            tools:text="Guillermo Díaz Ibañez"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:textColor="@color/black"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="32sp"
            app:autoSizeMinTextSize="14sp"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/iv_profile_pic"/>

        <!-- Botones -->
        <LinearLayout
            android:id="@+id/ly_buttons"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:showDividers="middle"
            android:divider="@drawable/divider_20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="20dp"
            android:gravity="center">

            <!-- Actividades -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_activities"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                app:icon="@drawable/icon_walk"
                app:backgroundTint="@color/tab_selected"
                app:rippleColor="@color/tab_ripple"
                android:text="@string/profile_activities"
                android:textSize="14sp"
                style="@style/StandardButton"/>

            <!-- Añadir amigo -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_add_friend"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                app:icon="@drawable/icon_add_friend"
                app:backgroundTint="@color/green"
                app:rippleColor="@color/green_ripple"
                android:text="@string/profile_add_friend"
                android:textSize="14sp"
                android:visibility="gone"
                style="@style/StandardButton"/>

            <!-- Eliminar amigo -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_remove_friend"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                app:icon="@drawable/icon_remove_friend"
                app:backgroundTint="@color/red"
                app:rippleColor="@color/green_ripple"
                android:text="@string/profile_remove_friend"
                android:textSize="14sp"
                android:visibility="gone"
                style="@style/StandardButton"/>
        </LinearLayout>
        
        <!-- Gráfica -->
        <!-- TODO: Implementar gráfica -->
        <TextView
            android:id="@+id/grafica"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="GRÁFICA"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@color/background"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/ly_buttons"
            />

        <!-- Estadísticas -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_stats"
            style="@style/StandardButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:iconSize="52dp"
            app:iconPadding="10dp"
            app:icon="@drawable/icon_stats"
            android:text="@string/profile_statistics"
            android:textAlignment="textStart"
            android:paddingHorizontal="10dp"
            android:textSize="20sp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toBottomOf="@id/grafica"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cornerRadius="5dp"
            app:rippleColor="@color/blue_primary_ripple"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>