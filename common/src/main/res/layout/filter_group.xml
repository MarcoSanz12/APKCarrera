<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="1dp"
    tools:background="@color/blue_primary"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/icon_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:paddingBottom="8dp"
        android:paddingTop="15dp"
        tools:text="Grupo de prueba"/>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/exp_categorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        app:el_expanded="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.checkbox.MaterialCheckBox
                style="@style/CheckBox"
                android:layout_height="wrap_content"
                android:id="@+id/cb_todos"
                android:checked="true"
                tools:background="@color/blue_primary"
                android:text="@string/todos"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_categorias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/filter_category"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </net.cachapa.expandablelayout.ExpandableLayout>

</LinearLayout>