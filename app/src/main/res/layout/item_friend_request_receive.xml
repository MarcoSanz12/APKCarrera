<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/blue_primary"
    android:layout_marginTop="10dp"
    android:stateListAnimator="@animator/animator_button"
    android:layout_width="match_parent"
    android:layout_height="@dimen/friends_card_size">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/horizontal_margin_card">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="@dimen/friends_card_size"
            android:layout_height="@dimen/friends_card_size"
            android:padding="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
            tools:src="@drawable/face_default" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_large_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bt_remove"
            app:layout_constraintStart_toEndOf="@+id/iv_profile_pic"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Guillermo Díaz Ibañez" />


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/bt_remove"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:backgroundTint="@color/transparent"
            android:padding="6dp"
            android:src="@drawable/icon_cancel_circle"
            android:tint="@color/bt_tint_cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bt_accept"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/bt_accept"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="6dp"
            android:backgroundTint="@color/transparent"
            android:tint="@color/bt_tint_accept"
            android:src="@drawable/icon_done_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>