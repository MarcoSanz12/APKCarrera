<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/group_botones_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:tabMode="fixed"
        app:tabRippleColor="@color/white"
        app:tabUnboundedRipple="true"
        android:stateListAnimator="@animator/animator_button"
        app:tabTextAppearance="@style/TabTextApparence"
        app:tabTextColor="@color/tab_text_color_select"
        app:tabBackground="@color/tab_background_select"
        app:tabIndicator="@null"
        app:tabIndicatorAnimationMode="elastic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Linea medio -->
    <View
        android:id="@+id/gl_mid"
        app:layout_constraintStart_toStartOf="@id/group_botones_top"
        app:layout_constraintEnd_toEndOf="@id/group_botones_top"
        app:layout_constraintTop_toTopOf="@id/group_botones_top"
        app:layout_constraintBottom_toBottomOf="@id/group_botones_top"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:elevation="4dp"
        android:background="@color/lightGrey"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_botones_top" />

</androidx.constraintlayout.widget.ConstraintLayout>