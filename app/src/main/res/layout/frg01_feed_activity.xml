<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Usuario -->
        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/blue_primary"
            android:stateListAnimator="@animator/animator_button"
            android:layout_marginHorizontal="8dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/friends_card_size">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/horizontal_margin_card">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_profile_pic"
                    android:layout_width="@dimen/friends_card_size"
                    android:layout_height="@dimen/friends_card_size"
                    android:padding="3dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
                    tools:src="@drawable/face_default" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_profile_pic"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Guillermo Díaz Ibañez" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


        <!-- Fotos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sv_imagenes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_image"/>

        <!-- Likes 2 -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ly_fav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            android:weightSum="10"
            android:layout_gravity="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/text_size_small_12"
                app:autoSizeMaxTextSize="@dimen/text_size_large_16"
                android:textStyle="italic"
                tools:text="Carrera de noche a la luz de la luna"
                android:maxLines="3"
                android:textColor="@color/black"
                android:layout_weight="7"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_fav"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:gravity="end|center"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="55"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_fav"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:iconSize="35dp"
                android:checkable="true"
                app:rippleColor="@color/pink_ripple"
                app:iconTint="@null"
                android:paddingHorizontal="2dp"
                app:backgroundTint="@color/transparent"
                app:icon="@drawable/fav_selector"
                android:checked="false"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

</ScrollView>